<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
						http://www.springframework.org/schema/security
						http://www.springframework.org/schema/security/spring-security-3.2.xsd
						http://www.springframework.org/schema/context
        				http://www.springframework.org/schema/context/spring-context-3.2.xsd">
						
						
	<!-- Para que o spring security encontrasse os outros pacotes.. teve que incluir o cont -->					
	<context:component-scan base-package="br.com.oxi" />	
	<context:annotation-config />

	<beans:bean id="customAuthenticationProvider"
		class="br.com.oxi.laicnanifnalpym.controller.user.CustomAuthenticationProvider" />			

	<http auto-config="true" use-expressions="true">
		<intercept-url pattern="/index.jsp" access="permitAll" />
		<intercept-url pattern="/login.jsp" access="permitAll" />
		<intercept-url pattern="/public" access="permitAll" />
		<!-- <intercept-url pattern="/resources/**" access="hasAuthority('USER_COMMOM')"/> -->
		<intercept-url pattern="/**" access="hasAuthority('USER_COMMOM')" />

		<form-login login-page="/login.jsp"
			authentication-failure-url="/login.jsp?erro=true"
			default-target-url="/user/home" />
			
			<logout logout-success-url="/login.jsp"
			delete-cookies="JSESSIONID"
			 />
			
		<session-management>
			<concurrency-control max-sessions="1"/>
		</session-management>
	</http>

	<authentication-manager>
		<authentication-provider ref="customAuthenticationProvider" />		
	</authentication-manager>
</beans:beans>
