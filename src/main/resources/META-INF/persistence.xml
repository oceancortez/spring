<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">


       <persistence-unit name="wprojectPersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
         <!--  <class>org.wpattern.daos.CategoryDao</class>
           <class>org.wpattern.daos.OrderDao</class>
           <class>org.wpattern.daos.OrderDetailDao</class>-->
           <class>org.wpattern.persistence.PersistenceService</class>
           <class>org.wpattern.persistence.impl.PersistenceServiceImpl</class>
           <class>org.wpattern.utils.GenericoDao</class>
           <class>org.wpattern.entities.Usuario</class>
           <class>org.wpattern.dao.UsuarioDao</class>
           <class>org.wpattern.dao.impl.UsuarioDaoImpl</class>
           <class>org.wpattern.utils.GenericDao</class>


              <properties>
                  <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
                  <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
                  <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/oxi" />
                  <property name="javax.persistence.jdbc.user" value="root" />
                  <property name="javax.persistence.jdbc.password" value="" />

                  <property name="hibernate.show_sql" value="true" />
                  <property name="hibernate.format_sql" value="true" />
                  <property name="hibernate.hbm2ddl.auto" value="update" />
              </properties>
       </persistence-unit>
</persistence>