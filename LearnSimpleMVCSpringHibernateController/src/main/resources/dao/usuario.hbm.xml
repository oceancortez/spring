<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	

	<sql-query name="getUserById">
	<![CDATA[
		select	u.id
				,u.nome
				,u.dt_ult_alt dtUltAlt 
		 					 		
		from   usuario  u     
		where  u.id = :id
	]]>
	</sql-query>
	
	<sql-query name="getUsers">
	<![CDATA[
		select	u.id
				,u.nome
				,u.dt_ult_alt dtUltAlt 
		 					 		
		from   usuario  u
	]]>
	</sql-query>
</hibernate-mapping>