<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">


    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>

    <application>
        <action-listener>org.primefaces.application.DialogActionListener</action-listener>
        <navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
        <view-handler>org.primefaces.application.DialogViewHandler</view-handler>
    </application>


    <!--http://www.semeru.com.br/blog/manipulado-de-excecoes-no-javaserver-faces-jsf-2-x/-->
    <!--<factory>-->
        <!--<exception-handler-factory>-->
            <!--org.omc.support.exception.CustomExceptionHandlerFactory-->
        <!--</exception-handler-factory>-->
    <!--</factory>-->

<!--Faz referença a pasta para encontrar as labels-->
    <application>
        <resource-bundle>
            <base-name>resources.labels</base-name>
            <var>labels</var>
        </resource-bundle>
        <locale-config>
            <default-locale>pt</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>

<!--Faz referença a pasta para encotra o arquivo de mensagens -->
    <application>
        <resource-bundle>
            <base-name>resources.messages</base-name>
            <var>messages</var>
        </resource-bundle>
    </application>

    <application>
          <resource-bundle>
            <base-name>org.omc.support.exception</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>

<converter>
	<converter-for-class>java.lang.Enum</converter-for-class>
	<converter-class>javax.faces.converter.EnumConverter</converter-class>
</converter>


</faces-config>